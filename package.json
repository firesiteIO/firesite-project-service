{
  "name": "firesite-project-service",
  "version": "1.0.0",
  "description": "AI-Powered Kanban Management with KaibanJS Integration",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5174 --host",
    "build": "vite build",
    "preview": "vite preview --port 5174",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,css,md}",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "dompurify": "^3.0.5",
    "highlight.js": "^11.9.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/dompurify": "^3.0.5",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "kanban",
    "project-management",
    "ai-powered",
    "kaibanjs",
    "firesite",
    "vite",
    "javascript"
  ],
  "author": "Firesite.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/firesiteio/firesite-project-service.git"
  },
  "bugs": {
    "url": "https://github.com/firesiteio/firesite-project-service/issues"
  },
  "homepage": "https://github.com/firesiteio/firesite-project-service#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}