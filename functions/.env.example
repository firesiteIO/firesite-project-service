# Firebase Functions Environment Variables - EXAMPLE FILE
# Copy this file to .env.development and update as needed

# Server Configuration
PORT=5000
NODE_ENV=development

# Claude API Configuration
CLAUDE_MODEL=claude-3-7-sonnet-20250219
# Add your Anthropic API key here
ANTHROPIC_API_KEY=

# MCP Server URL - will be auto-discovered if not specified
MCP_SERVER_URL=http://localhost:3001

# Enable MCP server integration
USE_MCP_SERVER=true

# Command execution settings
COMMAND_TIMEOUT=10000
STRICT_COMMAND_VALIDATION=true

# Token limits
MAX_TOKENS=4000
