{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "version": "1.0.0",
  "main": "src/index.js",
  "engines": {
    "node": "23"
  },
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "echo 'Skipping lint'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "init:legal": "node src/scripts/init-legal-docs.js",
    "test:mcp": "node src/tests/test-mcp.js",
    "test:migration": "node scripts/test-migration.js",
    "test:task-migration": "node scripts/test-task-migration.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@sendgrid/client": "^8.1.4",
    "@sendgrid/mail": "^8.1.4",
    "axios": "^1.4.0",
    "chalk": "^4.1.2",
    "consolidate": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-handlebars": "^8.0.1",
    "express-rate-limit": "^7.5.0",
    "firebase": "^11.6.0",
    "firebase-admin": "^13.2.0",
    "firebase-functions": "^6.3.2",
    "firebase-tools": "^14.2.0",
    "handlebars": "^4.7.8",
    "joi": "^17.13.3",
    "marked": "^12.0.2",
    "pdf-parse": "^1.1.1",
    "turndown": "^7.2.0",
    "twilio": "^5.4.0"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**"
    ]
  },
  "private": true
}
