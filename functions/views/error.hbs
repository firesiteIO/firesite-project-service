<html lang='en'>

  <head>

    <!-- set character type -->
    <meta charset='UTF-8' />

    <!-- website metadata -->
    <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'
    />
    <meta
      name='description'
      content='Firesite Error Page. This is an error template for Firesite. For more information, visit https://firesite.io.'
    />
    <meta name='keywords' content='Error, Firesite, Template' />
    <meta name='author' content='Thomas S. Butler, Firesite, LLC' />

    <!-- style sheets here -->
    <link rel='shortcut icon' href='{{#if baseUrl}}{{baseUrl}}{{/if}}/icon.ico' />
    <link rel='stylesheet' type='text/css' href='{{#if baseUrl}}{{baseUrl}}{{/if}}/css/error.css' />

    <title>{{title}}</title>

  </head>

  <!-- website body -->
  <body class='error'>
    <!-- App Container -->
    <div id="app" class="app">
      <div class="app-inner">
        <!-- Main Content -->
        <main class="container">
          <article class="card">
            <img src="{{#if baseUrl}}{{baseUrl}}{{/if}}/assets/img/logo-icon-sm.png" alt="Firesite.io Logo" class="logo" />
            <div class="content-box">
              <h1>{{code}}</h1>
              <h2>{{title}}</h2>
              <p>{{message}}</p>
              <div class="line"></div>
              <div class="help">
                Please refresh this page or use the back button to attempt the action again,
                If this error persists, please email the Firesit.io Administrator at: support@firesite.io
              </div>
            </div>
          </article>
        </main>

        <!-- Gradient Backgroud -->
        <div class="gradient-bg"></div>

        <!-- Footer -->
        <footer class="footer">
          <div class="footer-content">
            <!-- Copyright -->
            <div class="copyright-container">
              <div class="copyright">
                &copy; Copyright 2022-<span class="curyear"></span>, Firesite, LLC. All Rights
                Reserved.
              </div>
            </div>

            <!-- Social Links -->
            <div class="social-container">
              <!-- Social icons... (kept same structure, just indented) -->
              <div class="social">
                <a href="https://x.com/FiresiteIO" target="_blank">
                  <img
                    src="{{#if baseUrl}}{{baseUrl}}{{/if}}/assets/img/x-white.png"
                    width="28"
                    alt="Logo for Firesite.io"
                    class="social"
                  />
                </a>
              </div>
              <div class="social">
                <a href="https://www.facebook.com/firesite.io/" target="_blank">
                  <img
                    src="{{#if baseUrl}}{{baseUrl}}{{/if}}/assets/img/facebook-square-white.png"
                    width="28"
                    alt="Logo for Firesite.io"
                    class="social"
                  />
                </a>
              </div>
              <div class="social">
                <a href="https://dribbble.com/FiresiteIO" target="_blank">
                  <img
                    src="{{#if baseUrl}}{{baseUrl}}{{/if}}/assets/img/dribbble-white.png"
                    width="28"
                    alt="Logo for Firesite.io"
                    class="social"
                  />
                </a>
              </div>
              <div class="social">
                <a href="https://codepen.io/firesite" target="_blank">
                  <img
                    src="{{#if baseUrl}}{{baseUrl}}{{/if}}/assets/img/codepen-white.png"
                    width="28"
                    alt="Logo for Firesite.io"
                    class="social"
                  />
                </a>
              </div>
              <div class="social">
                <a href="https://www.behance.net/iamthoms" target="_blank">
                  <img
                    src="{{#if baseUrl}}{{baseUrl}}{{/if}}/assets/img/behance-white.png"
                    width="32"
                    alt="Logo for Firesite.io"
                    class="social"
                  />
                </a>
              </div>
              <div class="social">
                <a href="https://www.youtube.com/channel/UCdHBO4zCTjk2UZI9akxzMfQ" target="_blank">
                  <img
                    src="{{#if baseUrl}}{{baseUrl}}{{/if}}/assets/img/youtube-white.png"
                    width="28"
                    alt="Logo for Firesite.io"
                    class="social"
                  />
                </a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>

    <!-- Error Scripts -->
    <script>

      // Ensure animations are initialized after DOM is fully loaded
      document.addEventListener('DOMContentLoaded', async ()=> {;

        // Helper function for delays
        const delay = ms => new Promise(resolve => window.setTimeout(resolve, ms));

        // Add required elements
        const appContainer = document.querySelector('.app');
        const yearSpan = document.querySelectorAll('.curyear');

        // Delay for elements
        await delay(100);

        // Update curent year
        if (yearSpan.length) {
          // update all image containers
          for (let i = 0; i < yearSpan.length; i++) {
            yearSpan[i].textContent = new Date().getFullYear();
          }
        }

        // Delay for elements
        await delay(300);

        // Initial page load animation
        appContainer.classList.add('loaded');

      });

    </script>
  </body>
</html>
